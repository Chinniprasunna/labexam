        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/jfsdexam</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">2005</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="com.klef.jfsd.exam.Device"/>
        <mapping class="com.klef.jfsd.exam.Smartphone"/>
        <mapping class="com.klef.jfsd.exam.Tablet"/>
